generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
}

model Project {
  id          String   @id @default(cuid())
  title       String
  description String
  techStack   String[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Experience {
  id          String   @id @default(cuid())
  company     String
  position    String
  period      String
  description String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Reservation {
  id              String   @id @default(cuid())
  name            String
  email           String
  phoneNumber     String
  date            DateTime
  message         String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Owner {
  id        String   @id @default(cuid())
  name      String
  age       Int
  hobbies   String[]
  values    String
  country   String?  // null 허용
  birth     String?  // null 허용
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Other {
  id          String   @id @default(cuid())
  title       String
  content     String   @db.Text  // PDF 내용이나 이미지 설명
  fileType    String   // "pdf" 또는 "image"
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model PdfChunk {
  id        String   @id @default(cuid())
  content   String
  metadata  Json?
  keywords  String[]
  embedding Json?    // Vector storage
  fileName  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}