{
    "extends": "next/core-web-vitals",
    "parser": "@typescript-eslint/parser",
    "plugins": ["@typescript-eslint"],
    "rules": {
      "tailwindcss/no-custom-classname": "off",
      "tailwindcss/classnames-order": "off"
    },
    "settings": {
      "import/resolver": {
        "typescript": {
          "alwaysTryTypes": true
        }
      }
    },
    "ignorePatterns": ["**/components/ui/**"]
  }